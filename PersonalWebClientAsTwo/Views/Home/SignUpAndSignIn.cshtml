<!--表单验证-->
@{ 
    Layout = null;
}
<link href="~/Content/app/sign.css" rel="stylesheet" />

<div class="signup_context panel panel-default">
    <div class="panel-heading signup_title clearfix">
        <p class="pull-left">用户注册</p>
    </div>
    <div class="panel-body">
        <form role="form" id="signUp" method="post" class="form-horizontal">
            <div class="signup_content">
                <div class="form-group">
                    <label class="col-lg-2 col-lg-offset-2 control-label">注册账号</label>
                    <div class="col-lg-5">
                        <input type="email" class="form-control" name="email" placeholder="请输入您的邮箱地址" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 col-lg-offset-2 control-label">用户名</label>
                    <div class="col-lg-5">
                        <input type="text" class="form-control" name="username" placeholder="显示的昵称/用户名" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 col-lg-offset-2 control-label">密码</label>
                    <div class="col-lg-5">
                        <input type="password" class="form-control" name="password" placeholder="请输入新的密码" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 col-lg-offset-2 control-label">确认密码</label>
                    <div class="col-lg-5">
                        <input type="password" class="form-control" name="confirmPassword" placeholder="请再输入一遍上面的密码" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 col-lg-offset-2 control-label">验证码</label>
                    <div class="col-lg-3">
                        <input type="text" class="form-control" name="verificationCode" placeholder="请输入验证码" />
                    </div>
                    <div class="col-lg-2">
                        <button class="btn btn-primary" type="button">发送验证码</button>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-3 col-lg-offset-4">
                        <input type="checkbox" /><a href="javascript:void(0);" class="registerNotice"> 我已同意《xxxxxxxxx》规则</a>
                    </div>
                    <div class="col-lg-1">
                        <button class="btn btn-success" type="submit">注册</button>
                    </div>
                    <div class="col-lg-2"><a class="link_loginIn" href="javascript:void(0);">已经有账号？点击登录</a></div>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="signIn_context panel panel-default hidden">
    <div class="panel-heading signin_title">
        <p>用户登录</p>
    </div>
    <div class="panel-body">
        <form role="form" id="signIn" method="post" class="form-horizontal">
            <div class="signin_content">
                <div class="form-group">
                    <label class="col-lg-2 col-lg-offset-2 control-label">登录账号</label>
                    <div class="col-lg-5">
                        <input type="email" class="form-control" name="email" placeholder="请输入您的邮箱地址" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 col-lg-offset-2 control-label">密码</label>
                    <div class="col-lg-5">
                        <input type="password" class="form-control" name="password" placeholder="请输入密码" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 col-lg-offset-2 control-label">验证码</label>
                    <div class="col-lg-2">
                        <input type="text" class="form-control" name="password" placeholder="请输入验证码" />
                    </div>
                    <div class="col-lg-2">
                        <img class="signin_img" title="点击图片进行替换"/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-2 col-lg-offset-6">
                        <button class="btn btn-success" type="submit">登录</button>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-4 col-lg-offset-6">
                        <a class="retrievePassword" href="javascript:void(0);">忘记密码？点击找回密码</a>
                        <a class="retrievePassword" href="javascript:void(0);">没有账号？点击注册</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<script src="~/Scripts/app/sign.js"></script>
