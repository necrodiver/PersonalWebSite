<div class="signIn_context panel panel-default">
    <div class="panel-heading signin_title">
        <p>用户登录</p>
    </div>
    <div class="panel-body">
        <form role="form" id="signInForm" method="post" class="form-horizontal">
            <div class="signin_content">
                <div class="form-group">
                    <label class="col-lg-2 col-lg-offset-2 control-label">登录账号</label>
                    <div class="col-lg-5">
                        <input type="email" class="form-control" name="email" id="sin_email" placeholder="请输入您的邮箱地址" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 col-lg-offset-2 control-label">密码</label>
                    <div class="col-lg-5">
                        <input type="password" class="form-control" name="password" id="sin_pwd" placeholder="请输入密码" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 col-lg-offset-2 control-label">验证码</label>
                    <div class="col-lg-2">
                        <input type="text" class="form-control" name="vcf" id="sin_vcf" placeholder="请输入验证码" />
                    </div>
                    <div class="col-lg-2">
                        <img class="signin_img" id="signInImage"
                              src="@Url.Action("GetVerificationCode2")"
                             title="点击图片进行替换" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-5 col-lg-offset-4">
                        <button class="btn btn-success form-control" type="submit">登录</button>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-4 col-lg-offset-6">
                        <a class="retrievePassword" href="@Url.Action("RetrievePwd")">忘记密码？点击找回密码</a>
                        <a class="retrievePassword" href="@Url.Action("SignUp")">没有账号？点击注册</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<script src="~/Scripts/app/app-signIn.js"></script>
